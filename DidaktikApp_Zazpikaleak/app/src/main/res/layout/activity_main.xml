<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "@color/fondo"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/inicial_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo"
            android:fontFamily="@font/kawaimandala"
            android:paddingTop="15dp"
            android:text="Zazpikaleak"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="60dp" />


        <Button
        android:id="@+id/btnEmpezar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="@string/btnMenuPrincipal"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="100dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/bocadillo_cuadrado"
                android:fontFamily="@font/nunitoregular"
                android:paddingHorizontal="30dp"
                android:paddingVertical="50dp"
                android:text="@string/txtBienvenidaApp_Dingdong"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:src="@drawable/dindonfunko" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txtCreditos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/creditos" />
</LinearLayout>
