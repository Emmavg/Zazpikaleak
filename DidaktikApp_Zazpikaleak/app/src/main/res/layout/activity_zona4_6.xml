<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background= "@color/fondo"
    tools:context=".Zona4_6">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo"
        android:fontFamily="@font/nunitomedium"
        android:paddingTop="30dp"
        android:paddingHorizontal="40dp"
        android:text="@string/txtZona4_6_Titulo"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/scrollerZona4_6_Narrador_1"
                android:layout_width="342dp"
                android:layout_height="96dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:id="@+id/txtZona4_6_Narrador_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="5"
                    android:gravity="bottom"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunitoregular"
                    android:scrollbars="vertical">
                </TextView>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgZona4_6_Foto1"
                    android:layout_width="83dp"
                    android:layout_height="90dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/zona4_6_foto1" />

                <ImageView
                    android:id="@+id/imgZona4_6_Foto2"
                    android:layout_width="75dp"
                    android:layout_height="90dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/zona4_6_foto2" />

                <ImageView
                    android:id="@+id/imgZona4_6_Foto3"
                    android:layout_width="93dp"
                    android:layout_height="90dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/zona4_6_foto3" />

                <ImageView
                    android:id="@+id/imgZona4_6_Foto4"
                    android:layout_width="99dp"
                    android:layout_height="90dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/zona4_6_foto4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:orientation="horizontal">

                <ScrollView
                    android:id="@+id/scrollerZona4_6_Narrador_2"
                    android:layout_width="154dp"
                    android:layout_height="99dp"
                    android:layout_marginVertical="40dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/txtZona4_6_Narrador_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/nunitoregular"
                        android:gravity="bottom"
                        android:maxLines="10"
                        android:scrollbars="vertical"
                        android:textColor="@color/black">

                        <requestFocus />
                    </TextView>
                </ScrollView>

                <ImageView
                    android:id="@+id/imgZona4_6_Foto5"
                    android:layout_width="165dp"
                    android:layout_height="156dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/zona4_6_foto5" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollerZona4_6_Narrador_3"
                android:layout_width="342dp"
                android:layout_height="110dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/txtZona4_6_Narrador_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitoregular"
                    android:gravity="bottom"
                    android:maxLines="7"
                    android:scrollbars="vertical"
                    android:textColor="@color/black">
                    <requestFocus />
                </TextView>
            </ScrollView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnZona4_6_Siguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"

                android:backgroundTint="#5020C2"
                android:src="@drawable/ic_siguiente"
                android:visibility="visible"
                app:fabCustomSize="70dp"
                app:fabSize="normal"
                app:showMotionSpec="@android:anim/fade_in"
                app:useCompatPadding="true" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>