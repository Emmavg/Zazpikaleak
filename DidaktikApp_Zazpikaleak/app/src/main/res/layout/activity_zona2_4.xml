<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background= "@color/fondo"
    tools:context=".Zona2_4">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo"
        android:fontFamily="@font/nunitomedium"
        android:paddingTop="30dp"
        android:paddingHorizontal="40dp"
        android:text="@string/txtZona2_1_Titulo"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgZona2_4_Foto1"
                android:layout_width="186dp"
                android:layout_height="155dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/zona2_4_foto1" />

            <TextView
                android:id="@+id/txtZona2_4_Narrador_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunitoregular"
                android:scrollbars="vertical">

            </TextView>

            <ImageView
                android:id="@+id/imgZona2_4_Foto2"
                android:layout_width="186dp"
                android:layout_height="155dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scrollerZona1_1_Narrador_1"
                app:srcCompat="@drawable/zona2_4_foto2" />

            <TextView
                android:id="@+id/txtZona2_4_Narrador_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/nunitoregular">
            </TextView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/zona2_4_btnSiguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:backgroundTint="#5020C2"
                android:src="@drawable/ic_siguiente"
                app:fabSize="normal"
                android:visibility="visible"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                app:showMotionSpec="@android:anim/fade_in"
                app:useCompatPadding="true" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>