<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background= "@color/fondo"
    tools:context=".Zona2_4">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo"
        android:fontFamily="@font/nunitomedium"
        android:paddingTop="30dp"
        android:paddingHorizontal="40dp"
        android:text="@string/txtZona2_1_Titulo"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgZona2_4_Foto1"
                android:layout_width="186dp"
                android:layout_height="155dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/zona2_4_foto1" />

            <ScrollView
                android:id="@+id/scrollerZona2_4_Narrador_1"
                android:layout_width="342dp"
                android:layout_height="96dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/txtZona2_4_Narrador_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="bottom"
                    android:maxLines="10"
                    android:scrollbars="vertical">

                    <requestFocus />
                </TextView>
            </ScrollView>



            <ImageView
                android:id="@+id/imgZona2_4_Foto2"
                android:layout_width="186dp"
                android:layout_height="155dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scrollerZona1_1_Narrador_1"
                app:srcCompat="@drawable/zona2_4_foto2" />

            <ScrollView
                android:id="@+id/scrollerZona2_4_Narrador_2"
                android:layout_width="342dp"
                android:layout_height="96dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/txtZona2_4_Narrador_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="bottom"
                    android:maxLines="5"
                    android:scrollbars="vertical">

                    <requestFocus />
                </TextView>
            </ScrollView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>