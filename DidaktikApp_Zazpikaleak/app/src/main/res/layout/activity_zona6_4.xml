<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background= "@color/fondo"
    tools:context=".Zona6_4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/fondo"
        android:fontFamily="@font/nunitomedium"
        android:paddingHorizontal="40dp"
        android:paddingTop="30dp"
        android:text="@string/txtZona6_4_Titulo"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/scrollerZona6_4_Narrador_1"
                android:layout_width="342dp"
                android:layout_height="96dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:id="@+id/txtZona6_4_Narrador_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="5"
                    android:gravity="bottom"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunitoregular"
                    android:scrollbars="vertical">
                </TextView>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgZona6_4_Foto1"
                    android:layout_width="179dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/zona6_4_foto1" />

                <ImageView
                    android:id="@+id/imgZona6_4_Foto2"
                    android:layout_width="179dp"
                    android:layout_height="90dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/zona6_4_foto2" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollerZona6_4_Narrador_2"
                android:layout_width="342dp"
                android:layout_height="96dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:id="@+id/txtZona6_4_Narrador_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="5"
                    android:gravity="bottom"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunitoregular"
                    android:scrollbars="vertical">
                </TextView>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgZona6_4_Foto3"
                    android:layout_width="179dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/zona6_4_foto3" />

                <ImageView
                    android:id="@+id/imgZona6_4_Foto4"
                    android:layout_width="179dp"
                    android:layout_height="90dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/zona6_4_foto4" />
            </LinearLayout>

            <Button
                android:id="@+id/btnZona6_4_Siguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:text="@string/btnZona1_Siguiente"
                android:layout_gravity="end"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>