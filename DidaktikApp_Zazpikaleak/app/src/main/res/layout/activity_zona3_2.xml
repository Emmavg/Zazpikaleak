<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:background= "@color/fondo"
    tools:context=".Zona3_2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/zona3_2_btnGrupos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:text="@string/btnZona3_2_HACER_LOS_GRUPOS" />

            <EditText
                android:id="@+id/zona3_2_txtLeyenda"
                android:layout_width="match_parent"
                android:layout_height="274dp"
                android:layout_marginHorizontal="40dp"
                android:background="@drawable/zona3_2_bordes_edittext"
                android:hint="@string/btnZona3_2_Escribe_leyenda"
                android:outlineSpotShadowColor="@color/black"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/zona3_2_btnComprobar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:text="COMPROBAR" />

            <Button
                android:id="@+id/zona3_2_btnOrden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="0dp"
                android:enabled="false"
                android:text="@string/btnZona3_2_ORDEN" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnDuda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:backgroundTint="#5020C2"
                android:src="@drawable/ic_ayuda"
                app:fabSize="normal"
                android:layout_marginLeft="30dp"
                app:showMotionSpec="@android:anim/fade_in"
                app:useCompatPadding="true" />
            <RelativeLayout
                android:id="@+id/zona3_2_dindon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:visibility="invisible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/bocadillo_cuadrado"
                    android:fontFamily="@font/nunitoregular"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="50dp"
                    android:text="@string/txtZona3_2Dingdong"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right"
                    android:src="@drawable/dindonfunko" />

            </RelativeLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnZona3_2_Siguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"

                android:backgroundTint="#5020C2"
                android:src="@drawable/ic_siguiente"
                android:visibility="invisible"
                app:fabCustomSize="70dp"
                app:fabSize="normal"
                app:showMotionSpec="@android:anim/fade_in"
                app:useCompatPadding="true" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>
