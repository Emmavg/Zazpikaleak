<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background= "@color/fondo"
    tools:context=".Zona7_1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/fondo"
        android:fontFamily="@font/nunitomedium"
        android:paddingHorizontal="40dp"
        android:paddingTop="30dp"
        android:text="@string/txtZona7_1_Titulo"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/scrollerZona7_1_Narrador_1"
                android:layout_width="342dp"
                android:layout_height="96dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:id="@+id/txtZona7_1_Narrador_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="5"
                    android:gravity="bottom"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunitoregular"
                    android:scrollbars="vertical">
                </TextView>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgZona7_1_Foto1"
                    android:layout_width="179dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/zona7_1_foto1" />

                <ImageView
                    android:id="@+id/imgZona7_1_Foto2"
                    android:layout_width="179dp"
                    android:layout_height="90dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/zona7_1_foto2" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollerZona7_1_Narrador_2"
                android:layout_width="342dp"
                android:layout_height="96dp"
                android:layout_marginStart="32dp"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:id="@+id/txtZona7_1_Narrador_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="5"
                    android:gravity="bottom"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunitoregular"
                    android:scrollbars="vertical">
                </TextView>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgZona7_1_Foto3"
                    android:layout_width="179dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/zona7_1_foto3" />

                <ImageView
                    android:id="@+id/imgZona7_1_Foto4"
                    android:layout_width="179dp"
                    android:layout_height="90dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/zona7_1_foto4" />
            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnZona7_1_Siguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:backgroundTint="#5020C2"
                android:src="@drawable/ic_siguiente"
                app:fabSize="normal"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                app:showMotionSpec="@android:anim/fade_in"
                app:useCompatPadding="true" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>