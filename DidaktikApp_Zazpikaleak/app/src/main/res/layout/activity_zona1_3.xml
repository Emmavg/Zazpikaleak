<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/fondo">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo"
        android:fontFamily="@font/nunitomedium"
        android:paddingTop="25dp"
        android:paddingHorizontal="30dp"
        android:text="@string/txtZona1_Titulo"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="20dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/zona1_3_btn0"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/fondo"
                        android:layout_column="0">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/zona1_3_btn1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@color/fondo"
                        android:layout_column="1">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/zona1_3_btn2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/fondo"
                        android:layout_column="2">
                    </ImageButton>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/zona1_3_btn3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/fondo"
                        android:layout_column="0">
                    </ImageButton>
                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginHorizontal="10dp"
                        android:visibility="invisible"
                        android:background="@color/fondo"
                        android:layout_column="1">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/zona1_3_btn4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/fondo"
                        android:layout_column="2">
                    </ImageButton>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/zona1_3_btn5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/fondo"
                        android:layout_column="0">
                    </ImageButton>
                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginHorizontal="10dp"
                        android:visibility="invisible"
                        android:background="@color/fondo"
                        android:layout_column="1">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/zona1_3_btn6"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/fondo"
                        android:layout_column="2">
                    </ImageButton>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/zona1_3_btn7"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/fondo"
                        android:layout_column="0">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/zona1_3_btn8"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@color/fondo"
                        android:layout_column="1">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/zona1_3_btn9"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/fondo"
                        android:layout_column="2">
                    </ImageButton>

                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:id="@+id/zona1_3_dindon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_marginHorizontal="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/bocadillo_cuadrado"
                        android:fontFamily="@font/nunitoregular"
                        android:paddingHorizontal="30dp"
                        android:paddingVertical="50dp"
                        android:text="@string/txtBienHecho"
                        android:textAlignment="center"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="right"
                        android:src="@drawable/dindonfunko" />

                </RelativeLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/zona1_3_botonJuegoReiniciar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:backgroundTint="#5020C2"
                    android:src="@drawable/ic_restart"
                    app:fabSize="normal"
                    app:showMotionSpec="@android:anim/fade_in"
                    app:useCompatPadding="true" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/zona1_3_btnSiguiente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:backgroundTint="#5020C2"
                    android:src="@drawable/ic_siguiente"
                    app:fabSize="normal"
                    android:layout_gravity="right"
                    android:visibility="invisible"
                    app:showMotionSpec="@android:anim/fade_in"
                    app:useCompatPadding="true" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>