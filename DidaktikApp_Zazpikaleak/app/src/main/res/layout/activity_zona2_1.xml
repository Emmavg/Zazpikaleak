<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/fondo"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo"
        android:fontFamily="@font/nunitomedium"
        android:paddingTop="30dp"
        android:paddingHorizontal="40dp"
        android:text="@string/txtZona2_1_Titulo"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtZona2_1_Explicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/nunito"
                android:text="@string/txtZona2_1_Explicacion"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imgZona2_1_Foto"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/zona1_5_fotoantigua" />

            <ImageView
                android:id="@+id/zona2_1_imageView"
                android:layout_width="300dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/zona2_1_btnCamara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:backgroundTint="#5020C2"
                android:src="@drawable/ic_camara"
                app:fabSize="normal"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                app:showMotionSpec="@android:anim/fade_in"
                app:useCompatPadding="true" />

            <RelativeLayout
                android:id="@+id/zona2_1_dindon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:visibility="invisible">


                <TextView
                    android:id="@+id/txtZona1_2_Dingdong"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="56dp"
                    android:background="@drawable/bocadillo_cuadrado"
                    android:fontFamily="@font/nunitoregular"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="50dp"
                    android:text="@string/txtZona2_1_Dingdon"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/imgZona1_2_Dingdong"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right"
                    android:src="@drawable/dindonfunko" />

            </RelativeLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/zona2_1_btnSiguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:backgroundTint="#5020C2"
                android:src="@drawable/ic_siguiente"
                app:fabSize="normal"
                android:layout_gravity="right"
                android:visibility="invisible"
                android:layout_marginRight="10dp"
                app:showMotionSpec="@android:anim/fade_in"
                app:useCompatPadding="true" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>