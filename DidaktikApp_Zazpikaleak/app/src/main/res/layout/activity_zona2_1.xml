<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/fondo"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txtZona2_1_Titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/txtZona2_1_Titulo"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtZona2_1_Explicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtZona2_1_Explicacion"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"/>

            <ImageView
                android:id="@+id/imgZona2_1_Foto"
                android:layout_width="346dp"
                android:layout_height="190dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/zona1_5_fotoantigua" />

            <ImageView
                android:id="@+id/zona2_1_imageView"
                android:layout_width="346dp"
                android:layout_height="201dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp" />


            <Button
                android:id="@+id/zona2_1_btnCamara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="@string/btnZona2_1_Camara" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/txtZona1_2_Dingdong"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="56dp"
                    android:background="@drawable/bocadillo_cuadrado"
                    android:fontFamily="@font/nunitoregular"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="50dp"
                    android:text="@string/txtZona2_1_Dingdon"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/imgZona1_2_Dingdong"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right"
                    android:src="@drawable/dindonfunko" />

            </RelativeLayout>

            <Button
                android:id="@+id/zona2_1_btnSiguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="@string/btnZona1_Siguiente">
            </Button>

        </LinearLayout>

    </ScrollView>
</LinearLayout>