<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background= "@color/fondo"
    tools:context=".Zona1_1">


    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo"
        android:fontFamily="@font/nunitomedium"
        android:paddingTop="25dp"
        android:paddingHorizontal="30dp"
        android:text="@string/txtZona1_Titulo"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgZona1_1_Foto1"
                    android:layout_width="173dp"
                    android:layout_height="114dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/zona1_foto_1" />

                <ImageView
                    android:id="@+id/imgZona1_1_Foto2"
                    android:layout_width="169dp"
                    android:layout_height="114dp"
                    app:srcCompat="@drawable/zona1_foto_2" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollerZona1_1_Narrador_1"
                android:layout_width="342dp"
                android:layout_height="96dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:id="@+id/txtZona1_1_Narrador_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="5"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunitoregular"
                    android:scrollbars="vertical">
                </TextView>
            </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgZona1_1_Foto3"
                    android:layout_width="179dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/memory3" />

                    <ImageView
                    android:id="@+id/imgZona1_1_Foto4"
                    android:layout_width="179dp"
                    android:layout_height="90dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/zona1_foto_4" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollerZona1_1_Narrador_2"
                android:layout_width="345dp"
                android:layout_height="230dp">

                <TextView
                    android:id="@+id/txtZona1_1_Narrador_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunitoregular"
                    android:scrollbars="vertical" />
            </ScrollView>

            <ImageView
                android:id="@+id/imgZona1_1_Foto5"
                android:layout_width="166dp"
                android:layout_height="90dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/zona1_foto_5" />

            <Button
                android:id="@+id/btnZona1_1_Siguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:text="@string/btnZona1_Siguiente"
                android:layout_gravity="end"/>


        </LinearLayout>

    </ScrollView>
</LinearLayout>