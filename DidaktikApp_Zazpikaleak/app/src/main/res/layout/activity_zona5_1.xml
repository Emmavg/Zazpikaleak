<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondo"
    tools:context="com.example.didaktikapp_zazpikaleak.Zona5_1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/fondo"
        android:fontFamily="@font/nunitomedium"
        android:paddingHorizontal="40dp"
        android:paddingTop="30dp"
        android:text="@string/zona5_1puzzle_de_marijaia"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/yellowLayout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/pieza1"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/zona5_1_interrogacion"
            android:tag="Pieza1" />

        <View
            android:id="@+id/pieza2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/zona5_1_interrogacion"
            android:tag="Pieza2" />

        <View
            android:id="@+id/pieza3"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/zona5_1_interrogacion"
            android:tag="Pieza3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/yellowLayout2"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/pieza4"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@drawable/zona5_1_interrogacion"
            android:tag="Pieza4" />

        <View
            android:id="@+id/pieza5"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@drawable/zona5_1_interrogacion"
            android:tag="Pieza5" />

        <View
            android:id="@+id/pieza6"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@drawable/zona5_1_interrogacion"
            android:tag="Pieza6" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/top_layout"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/fondo"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgpieza1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="212dp"
                        android:layout_marginTop="150dp"
                        android:layout_marginEnd="33dp"
                        android:layout_marginBottom="70dp"
                        app:srcCompat="@drawable/zona5_1_pieza1" />

                    <ImageView
                        android:id="@+id/imgpieza3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="21dp"
                        android:layout_marginEnd="214dp"
                        android:layout_marginBottom="210dp"
                        app:srcCompat="@drawable/zona5_1_pieza3" />

                    <ImageView
                        android:id="@+id/imgpieza5"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="176dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="167dp"
                        app:srcCompat="@drawable/zona5_1_pieza5" />

                    <ImageView
                        android:id="@+id/imgpieza2"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="58dp"
                        android:layout_marginEnd="217dp"
                        android:layout_marginBottom="41dp"
                        app:srcCompat="@drawable/zona5_1_pieza2" />

                    <ImageView
                        android:id="@+id/imgpieza4"
                        android:layout_width="183dp"
                        android:layout_height="115dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="87dp"
                        android:layout_marginEnd="141dp"
                        android:layout_marginBottom="152dp"
                        app:srcCompat="@drawable/zona5_1_pieza4" />

                    <ImageView
                        android:id="@+id/imgpieza6"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="167dp"
                        android:layout_marginEnd="61dp"
                        android:layout_marginBottom="248dp"
                        app:srcCompat="@drawable/zona5_1_pieza6" />
                </RelativeLayout>
            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnDuda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_gravity="left|end"
                android:backgroundTint="#5020C2"
                android:src="@drawable/ic_ayuda"
                app:fabSize="normal"
                app:showMotionSpec="@android:anim/fade_in"
                app:useCompatPadding="true" />

            <RelativeLayout
                android:id="@+id/zona5_1_dindon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:visibility="invisible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/bocadillo_cuadrado"
                    android:fontFamily="@font/nunitoregular"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="50dp"
                    android:text="@string/txtBienHecho"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right"
                    android:src="@drawable/dindonfunko" />

            </RelativeLayout>
            <Button
                android:id="@+id/btnZona5_1_Siguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:onClick="Siguiente"
                android:text="@string/btnZona1_Siguiente"
                android:layout_gravity="end"/>
        </LinearLayout>

    </ScrollView>



</LinearLayout>